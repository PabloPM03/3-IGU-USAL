<Window x:Class="Restaurante.VentanaGestionMesas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurante"
        mc:Ignorable="d" Icon="/assets/table.png"
        Title="VentanaGestionMesas"
        Height="600" Width="900">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>


        <Label Content="MESAS DISPONIBLES" Grid.Column="1" Grid.Row="1"/>
        <ListView Name="cuadroMesas" Grid.Column="1" Grid.Row="2" SelectionChanged="cuadroMesas_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="280" DisplayMemberBinding="{Binding id}"/>
                    <GridViewColumn Header="Estado" Width="280" DisplayMemberBinding="{Binding estado}"/>
                    <GridViewColumn Header="Comensales" Width="280" DisplayMemberBinding="{Binding comensales}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Label Content="COMANDA DE LA MESA ELEGIDA" Grid.Column="1" Grid.Row="4"/>
        <ListView Name="cuadroComandas" Grid.Column="1" Grid.Row="5" SelectionChanged="cuadroComandas_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="30" DisplayMemberBinding="{Binding id}"/>
                    <GridViewColumn Header="Categoria" Width="60" DisplayMemberBinding="{Binding tipo}"/>
                    <GridViewColumn Header="Plato" Width="170" DisplayMemberBinding="{Binding nombre}"/>
                    <GridViewColumn Header="Desscripcion" Width="530" DisplayMemberBinding="{Binding descripcion}"/>
                    <GridViewColumn Header="Precio" Width="50" DisplayMemberBinding="{Binding precio}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="1" Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnAnadirPlato" Content="Añadir Plato" Margin="15"  Width="100" Click="btnAnadirPlato_Click"/>
            <Button Name="btnEliminarPlato" Content="Eliminar Plato" Margin="15" Width="100" Click="btnEliminarPlato_Click"/>
        </StackPanel>
    </Grid>
</Window>
