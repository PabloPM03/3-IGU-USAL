<Window x:Class="Restaurante.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurante"
        mc:Ignorable="d" WindowState="Maximized"
        MinHeight="400" MinWidth="800"
        Title="MainWindow" Name="ventanaPrincipal">
    
    
    <Grid x:Name="pantallaPrincipal">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="columnaBotones" Width="60" />
            <ColumnDefinition/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--COLUMNA DE BOTONES-->
        <Grid Grid.Row="1" Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Rectangle Grid.Row="0" Grid.RowSpan="7" Fill="LightGray"/>

            <Button Name="btnVerRestaurante" Grid.Row="0" BorderThickness="0" Background="LightGray" Padding="10" Click="btnVerRestaurante_Click">
                <Image Source="/table.png"/>
            </Button>
            <Button Name="btnAnadirMesa" Grid.Row="1" BorderThickness="0" Background="LightGray" Padding="10" Click="canvasAnadirMesa_Click">
                <Image Source="/plus.png"/>
            </Button>
            <Button Name="btnVerCarta" Grid.Row="2" BorderThickness="0" Background="LightGray" Padding="10" Click="btnVerCarta_Click">
                <Image Source="/menu.png"/>
            </Button>

            <!--AQUI SE PUEDEN INTRODUCIR MÁS BOTONES-->
            <Button Name="btnCuenta" Grid.Row="4" BorderThickness="0" Background="LightGray" Padding="10" Click="btnCuenta_Click">
                <Image Source="/user.png"/>
            </Button>
            <Button Name="btnAjustes" Grid.Row="5" BorderThickness="0" Background="LightGray" Padding="10" Click="btnAjustes_Click">
                <Image Source="/setting.png"/>
            </Button>
        </Grid>

        
        
        <TextBlock x:Name="lblMenu" Grid.Row="0" Grid.ColumnSpan="3" Background="LightGray"/>

        <!--MAPA MESAS DEL RESTAURANTE-->
        <ScrollViewer Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1">
            <Grid x:Name="gridMapaMesas" Width="2000" Height="1000" Background="DimGray">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.LayoutTransform>
                    <ScaleTransform x:Name="escalaMapa" ScaleX="1" ScaleY="1"/>
                </Grid.LayoutTransform>


                <Rectangle Grid.Row="0" Grid.Column="0" Grid.RowSpan="10" Fill="Black"/>
                <Rectangle Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="14" Fill="Black"/>
                <Rectangle Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="8" Grid.RowSpan="10" Fill="Black"/>
                <Rectangle Grid.Row="11" Grid.Column="7" Grid.RowSpan="9" Fill="Black"/>
                <Rectangle Grid.Row="1" Grid.Column="14" Grid.RowSpan="19" Fill="Black"/>
                <Rectangle Grid.Row="5" Grid.Column="5" Fill="Black"/>
                <Rectangle Grid.Row="5" Grid.Column="9" Fill="Black"/>

                <Rectangle Grid.Row="2" Grid.Column="2" Grid.RowSpan="3" Fill="Red"/>
                <Rectangle Grid.Row="6" Grid.Column="2" Grid.RowSpan="3" Fill="Red"/>
                <Rectangle Grid.Row="2" Grid.Column="8" Grid.ColumnSpan="3" Fill="Red"/>
                <Rectangle Grid.Row="14" Grid.Column="12" Grid.RowSpan="3" Fill="Red"/>
                <Rectangle Grid.Row="8" Grid.Column="12" Grid.RowSpan="3" Fill="Red"/>

                <Rectangle Grid.Row="1" Grid.Column="4" Grid.RowSpan="2" Fill="Red"/>
                <Rectangle Grid.Row="1" Grid.Column="6" Grid.RowSpan="2" Fill="Red"/>
                <Rectangle Grid.Row="8" Grid.Column="4" Grid.RowSpan="2" Fill="Red"/>
                <Rectangle Grid.Row="8" Grid.Column="6" Grid.RowSpan="2" Fill="Red"/>
                <Rectangle Grid.Row="11" Grid.Column="8" Grid.ColumnSpan="2" Fill="Red"/>
                <Rectangle Grid.Row="13" Grid.Column="8" Grid.ColumnSpan="2" Fill="Red"/>
                <Rectangle Grid.Row="15" Grid.Column="8" Grid.ColumnSpan="2" Fill="Red"/>
                <Rectangle Grid.Row="12" Grid.Column="12" Grid.ColumnSpan="2" Fill="Red"/>

                <Rectangle Grid.Row="5" Grid.Column="4" Grid.RowSpan="1" Fill="Red"/>
                <Rectangle Grid.Row="5" Grid.Column="6" Grid.RowSpan="1" Fill="Red"/>
                <Rectangle Grid.Row="5" Grid.Column="8" Grid.RowSpan="1" Fill="Red"/>
                <Rectangle Grid.Row="5" Grid.Column="10" Grid.RowSpan="1" Fill="Red"/>
                <Rectangle Grid.Row="8" Grid.Column="9" Grid.RowSpan="1" Fill="Red"/>
                <Rectangle Grid.Row="4" Grid.Column="12" Grid.RowSpan="1" Fill="Red"/>
                <Rectangle Grid.Row="6" Grid.Column="12" Grid.RowSpan="1" Fill="Red"/>

                <Rectangle Grid.Row="17" Grid.Column="14" Grid.ColumnSpan="4" Grid.RowSpan="2" Fill="GreenYellow"/>
                <Label Grid.Row="17" Grid.Column="14" Grid.ColumnSpan="4" Grid.RowSpan="2" 
                       Content="COCINA" FontSize="6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Rectangle Grid.Row="17" Grid.Column="4" Grid.ColumnSpan="4" Grid.RowSpan="2" Fill="GreenYellow"/>
                <Label Grid.Row="17" Grid.Column="4" Grid.ColumnSpan="4" Grid.RowSpan="2" 
                       Content="COCINA" FontSize="6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </ScrollViewer>
        <!--MENU EXTENDIDO PARA LOS BOTONES-->
        <Rectangle x:Name="extendedMenu" Grid.Column="1" Grid.Row="1" Fill="Gray" Visibility="Hidden"/>
        


        <!--BOTONES ZOOM MAPA-->
        <Grid Grid.Row="1" Grid.Column="3" Margin="0,0,30,15" HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <Button Name="btnZoomMas"  Grid.Row="1" Click="btnZoom_Click">
                <Image Source="/plus.png" Margin="2"/>
            </Button>
            <Button Name="btnZoomMenos" Grid.Row="2" Click="btnZoom_Click">
                <Image Source="/minus.png" Margin="2"/>
            </Button>
        </Grid>

        <TextBlock x:Name="lblEstado" Grid.Row="2" Grid.ColumnSpan="3" Background="LightGray"/>

    </Grid>
</Window>
