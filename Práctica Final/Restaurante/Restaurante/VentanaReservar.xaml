<Window x:Class="Restaurante.VentanaReservar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurante"
        mc:Ignorable="d" Background="LightGray" ResizeMode="NoResize" Icon="/assets/setting.png"
        Title="Nueva Reserva" Height="180" Width="300">
    
    <StackPanel Margin="20">
        
        <TextBlock Text="Comensales"/>
        <TextBox Text="{Binding mesaSeleccionada.comensales, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Name="comensalesTextBox"/>
        
        <TextBlock Text="Forma"/>
        <ComboBox ItemsSource="{Binding tiposFormas}"
                  SelectedItem="{Binding mesaSeleccionada.forma, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        
        <Button Name="btn_Aceptar" Content="Aceptar" Click="btn_Aceptar_Click" IsDefault="True"/>
        
    </StackPanel>
</Window>
