<Window x:Class="Animaciones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Animaciones"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Name="btnClear" Content="Clear Figura"
                Margin="20,10" Click="btnClear_Click"
                Grid.Row="0" Grid.Column="0"/>
        <Button Name="btnAnimar" Content="Animar"
                Margin="20,10" Click="btnAnimar_Click"
                Grid.Row="0" Grid.Column="1"
                IsEnabled="False"/>
        <Canvas Name="elCanvas"
                Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
