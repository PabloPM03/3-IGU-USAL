<Window x:Class="ConversiónEuroDolar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:ConversiónEuroDolar"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Name="textoEuro" Grid.Column="0" Grid.Row="0" Content="EURO" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
        <Label Name="textoDolar" Grid.Column="0" Grid.Row="1" Content="DOLAR" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
        <local:NumericTextBox x:Name="Euro" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" FontSize="18" Width="600"/>
        <local:NumericTextBox x:Name="Tasa" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" FontSize="18" Width="600"/>
        <local:NumericTextBox x:Name="Dolar" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" FontSize="18" Width="600"/>
    </Grid>

</Window>
