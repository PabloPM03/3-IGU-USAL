<Window x:Class="PolilineaRaton2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolilineaRaton2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Canvas Name="canvas" MouseLeftButtonDown="canvas_MouseLeftButtonDown" MouseMove="canvas_MouseMove" Background="Transparent">
        <Polyline Name="linea" Stroke="Red" StrokeThickness="2"/>
        <Line Name="preview" Stroke="Red" StrokeThickness="3" StrokeDashArray="2"/>
    </Canvas>
</Window>
